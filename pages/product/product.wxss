
.product-list image {
    max-width: 100%;
    height: 180px;
}
.product-list navigator {
    text-align: center;
    padding-top: 10px;
}
.product-list-item {
    margin: 12px 10px 20px;
    box-shadow: 0px 4px 10px #b5b5b5;
}

.product-list-item text {
    display: block;
    text-align: center;
    line-height: 44px;
}

.page-cate-list {
    border-bottom:1px solid #ddd;
    height: 40px;
}
.product-category {
    display: flex;
    flex-wrap:nowrap;
    padding: 9px 5px;
}
.product-category text {
    margin: 0 5px;
    padding: 0 5px;
    color: #333;
    white-space:nowrap;
    display: block;
}
.product-category .active {
    color: #00a0e9;
}